<div class="container">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-sucsess btn-lg" id="myBtn">Login</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><span class="glyphicon glyphicon-lock"></span> Login</h4>
        </div>
        <div class="modal-body" style="padding:40px 50px;">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form role="form">
            <div class="form-group">
              <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;&nbsp;<%= f.label :Username %><br />
              <%= f.email_field :email, autofocus: true %>
              <!-- <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label> -->
              <!-- <input type="text" class="form-control" id="usrname" placeholder="Enter email"> -->
            </div>
            <div class="form-group">
              <span class="glyphicon glyphicon-eye-open"></span>&nbsp;&nbsp;&nbsp;<%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off" %>
              <!-- <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label> -->
              <!-- <input type="text" class="form-control" id="psw" placeholder="Enter password"> -->
            </div>
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <!-- <label><input type="checkbox" value="" checked>Remember me</label> -->
            </div>
              <%= f.submit "Log in", class: 'btn btn-success btn-block' %>
              <!-- <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button> -->
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
      
    </div>
  </div> 
</div><!-- end of modal container div -->
